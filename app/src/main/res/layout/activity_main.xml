<?xml version="1.0" encoding="utf-8"?>
    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_normal" />

        <ImageView
            android:id="@+id/cat"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@anim/cat_anim"
            app:layout_heightPercent="31.5%"
            app:layout_widthPercent="56.1%"
            app:layout_marginTopPercent="37.5%"
            app:layout_marginLeftPercent="21.95%" />

        <ImageView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/cat"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/setting" />

        <TextView
            android:id="@+id/help"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:text="@string/help"
            android:textColor="#a61e1e"
            android:textSize="20sp"
            app:layout_heightPercent="5.5%"
            app:layout_marginBottomPercent="0.2%"
            app:layout_marginLeftPercent="2%"
            app:layout_widthPercent="19%" />


        <TextView
            android:id="@+id/copyright"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:alpha="0.6"
            android:text="@string/copyright"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_heightPercent="5.5%"
            app:layout_marginBottomPercent="0.2%"
            app:layout_widthPercent="25%" />


        <TextView
            android:id="@+id/record"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:text="@string/record"
            android:textColor="#a61e1e"
            android:textSize="20sp"
            app:layout_heightPercent="5.5%"
            app:layout_marginBottomPercent="0.2%"
            app:layout_widthPercent="25%" />

        <RelativeLayout
            android:id="@+id/start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_above="@+id/copyright"
            app:layout_heightPercent="22%"
            app:layout_marginBottomPercent="4.5%"
            app:layout_marginLeftPercent="32%"
            app:layout_widthPercent="39%">

            <TextView
                android:id="@+id/start_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/start"
                android:textSize="25sp" />
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>

