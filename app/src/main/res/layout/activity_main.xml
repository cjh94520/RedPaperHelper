<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@anim/cat_anim"/>

    <ImageView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/test"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/setting" />

    <TextView
        android:id="@+id/help"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/test"
        android:layout_alignLeft="@id/test"
        app:layout_heightPercent="5.5%"
        app:layout_widthPercent="19%"
        app:layout_marginLeftPercent="2%"
        app:layout_marginBottomPercent="0.2%"
        android:clickable="true"
        android:text="@string/help"
        android:textColor="#a61e1e"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/copyright"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5.5%"
        app:layout_widthPercent="25%"
        android:layout_alignBottom="@id/test"
        android:layout_centerInParent="true"
        android:alpha="0.6"
        android:text="@string/copyright"
        android:textSize="20sp"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/record"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5.5%"
        app:layout_widthPercent="25%"
        app:layout_marginBottomPercent="0.2%"
        android:layout_alignBottom="@id/test"
        android:layout_alignRight="@id/test"
        android:clickable="true"
        android:text="@string/record"
        android:textColor="#a61e1e"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/start"
        android:layout_above="@+id/copyright"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="21%"
        app:layout_widthPercent="39%"
        app:layout_marginLeftPercent="31%"
        app:layout_marginBottomPercent="4%">
        <TextView
            android:id="@+id/start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:textSize="25sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>
